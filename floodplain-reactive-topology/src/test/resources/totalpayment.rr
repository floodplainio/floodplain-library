|>database(resource='dvd',schema='public',table='payment')
	->scan(key=ToString([customer_id])
		, Msg(total=ToDouble(0))
        ,->set(@total=[@total]+[amount],@customer_id=[customer_id])
        ,->set(@total=[@total]-[amount],@customer_id=[customer_id])
    )
    ->only(total=[@total], customer_id=[@customer_id])
	->log(logName='ble')
    ->sink(connector='@replication',collection='paymentpercustomer', '@PAYMENTPERCUSTOMER')
